RewriteEngine On

# Allow EDS JSON selectors to pass through
RewriteCond %{REQUEST_URI} \.model\.json$ [OR]
RewriteCond %{REQUEST_URI} \.infinity\.json$ [OR]
RewriteCond %{REQUEST_URI} \.content\.json$
RewriteRule ^(.*)$ - [L,PT]

# Rewrite short URLs to AEM content paths
RewriteRule ^/$ /content/qsr/us/en.html [PT,L]
RewriteRule ^/uk/(.*)$ /content/qsr/uk/$1 [PT,L]
RewriteRule ^/jp/(.*)$ /content/qsr/jp/$1 [PT,L]

# Default market (US)
RewriteCond %{REQUEST_URI} !^/content/
RewriteCond %{REQUEST_URI} !^/apps/
RewriteCond %{REQUEST_URI} !^/etc/
RewriteCond %{REQUEST_URI} !^/libs/
RewriteCond %{REQUEST_URI} !^/bin/
RewriteRule ^/(.*)$ /content/qsr/us/$1 [PT,L]
